<div
  class="bg-image p-4 text-center shadow-1-strong  mb-6 text-white"
  style="background-image: url('/images/background.png');"
>


<% if (msg) { %>
    <div>
        <p><%= msg %></p>
        <img src="/images/meandog.png"/>
    </div>
<% } %>
<div class="text-center mb-3">
<div class="text-pink-50 mb-5">
<!-- <img src="/images/heart.png"> -->
<h2>Your other half is waiting to be found...</h2>
</div>
</div>

<form id="form" action="/users/login" method="POST">
    <div class="form-outline mb-4">
    <div class="text-center mb-3">
    <label for="email"></label>
    <input id="email" type="email" name="email" placeholder="Enter your email" required />
    </div>
    </div>

    <div class="form-outline mb-4">
    <div class="text-center mb-3">
    <label for="password"></label>
    <input id="password" type="password" name="password" placeholder="Enter your password" required />
    </div>
    <br>
    <div class="text-center mb-3">
    <button type="submit" class="btn btn-outline-light btn-lg m-2">Login</button>
    </div>
    </div>
</form>
</div>

