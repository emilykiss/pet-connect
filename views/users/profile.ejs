<h1>Profile</h1>


<form method="POST" action="/users/profile">
  <h2>Bio:</h2>
  <label for="aboutMe"></label>
  <textarea type="text" name="content" id="aboutMe" placeholder="Tell us about yourself!" required></textarea>
  <input hidden value="<%= user.id %>" name="userId" type="text"/>
  <button type="submit">Post</button>
</form>

<div>
<% comments.forEach(comment => { %>
    <h3><%= comment.content %></h3>
    <button type="submit">Edit</button>
    <% }) %>
</div>

<style>
  * {
    background-color: pink;
  }
  h1, h2 {
    color: hotpink;
  }
</style>
