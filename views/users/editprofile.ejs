<h1>I am the edit profile page</h1>

 <h3><%= comment.content %></h3>

<form method="POST" action="/users/editprofile/<%= comment.id %>?_method=PUT">
     <label for="edit"></label>
     <input type="text" id="edit" name="edit" value="<%= comment.content %>" required/>
     <button type="submit">Submit</button>
 </form>

 <form method="POST" action="/users/editprofile/<%= comment.id %>?_method=DELETE">
        <label for="delete"></label>
        <input hidden value="<%= comment.id %>" name="delete"/>
        <button type="submit">Delete</button>
</form>